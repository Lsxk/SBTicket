<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lsxk.sbticket.dao.SiteDao">
    <!--为dao接口方法提供sql语句配置-->
    <select id="queryBySiteId" parameterType="long" resultType="Site">
        SELECT site_id, name, campus
        FROM t_site
        WHERE site_id = #{siteId}
    </select>

    <select id="queryByName" parameterType="String" resultType="Site">
        SELECT site_id, name, campus
        FROM t_site
        WHERE name = #{name}
    </select>

    <select id="queryByCampus" parameterType="String" resultType="Site">
        SELECT site_id, name, campus
        FROM t_site
        WHERE campus = #{campus}
    </select>

    <select id="queryAll" resultType="Site">
        SELECT site_id, name, campus
        FROM t_site
    </select>

    <insert id="insertSite" parameterType="Site">
        INSERT INTO t_site (name, campus)
                VALUES (#{name}, #{campus})
    </insert>
</mapper>